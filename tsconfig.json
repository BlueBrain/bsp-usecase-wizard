{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
 
  "compilerOptions": {
    "noImplicitAny": true,
    "baseUrl": "src",
    "paths": {
      "@helpers/*": [ "helpers/*" ],
      "@components/*": [ "components/*" ],
      "@/*": [ "./*" ]
    }
  }
}